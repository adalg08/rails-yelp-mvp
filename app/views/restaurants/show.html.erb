<div class="text-center">
  <h2><%= @restaurant.name %></h2>
  <h3><%= @restaurant.category.capitalize %></h3>
  <p>
    <%= link_to "Edit", edit_restaurant_path(@restaurant) %> |
    <%= link_to "Delete", restaurant_path(@restaurant), method: :delete, data: { confirm: "Are you sure?" } %>
  </p>
  <p>Address: <%= @restaurant.address %></p>
  <p>Phone number: <%= @restaurant.phone_number %></p>
  <h4>Reviews</h4>
  <p><%= link_to "Add a review", new_restaurant_review_path(@restaurant) %></p>

  <% @restaurant.reviews.each do |review| %>
    <p><%= "⭐" * review.rating %> <%= review.content %></p>

  <% end %>
  <%= link_to "Back to restaurants", restaurants_path %>
</div>
